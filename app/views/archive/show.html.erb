<div class="textinfo">
  <div class="links">
    <%= link_to "RSS", "/rss" %>
    ▴ <%= link_to "RSS (mobile scroll)", "/rss/mobile" %>
    ▴ <%= link_to "Email Delivery", "/subscribe" %>
    <br><br>
  </div>
  <table>
    <% (UF_RECORD.num_comics - 1).downto(0).each do |i| %>
      <% comic = UF_RECORD.comics[i] %>
      <tr>
        <td class="index"><%= i %></td>
        <td class="also"><%= comic[:date].strftime('%Y %^b %-d') %></td>
        <td><%= link_to comic[:title], "/#{i}" %></td>
      </tr>
    <%end %>
  </table>
</div>
